{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "restore",
            "command": "npm",
            "type": "shell",
            "args": [
                "run-script",
                "restore"
            ],
            "problemMatcher": []
        },
        {
            "label": "clean",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "clean"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build"
            ],
            "group": {
                "isDefault": true,
                "kind": "build"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "lint",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "lint",
                "--",
                "--format",
                "msbuild"
            ],
            "problemMatcher": "$msCompile"
        }<% if(test) { %>,
        {
            "label": "test",
            "command": "npm",
            "type": "shell",
            "args": [
                "run-script",
                "test"
            ],
            "problemMatcher": "$tsc"
        }<% } %>
    ]
}